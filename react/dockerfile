# Use the official Node.js image with version 20.12.2 as the base image
FROM node:20.12.2-alpine

# Set the working directory
WORKDIR /app

# Copy package.json and package-lock.json files
COPY package.json package-lock.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application code
COPY . .

# Install dependencies needed for Google Cloud SDK and Secret Manager
RUN apk add --no-cache python3 py3-pip gcc musl-dev libffi-dev

# Install the google-cloud-secret-manager package
RUN pip3 install google-cloud-secret-manager

# Fetch the secret from Secret Manager and save it to the correct location
RUN python3 -c "from google.cloud import secretmanager; \
    client = secretmanager.SecretManagerServiceClient(); \
    name = 'projects/sigeti/secrets/sigeti-credentials/versions/latest'; \
    response = client.access_secret_version(request={'name': name}); \
    with open('/app/sigeti-ca02d3a77e56.json', 'wb') as f: \
        f.write(response.payload.data)"

# Set environment variables
ENV GOOGLE_APPLICATION_CREDENTIALS=/app/sigeti-ca02d3a77e56.json

# Build the Next.js application
RUN npm run build

# Expose the port Next.js will run on
EXPOSE 3000

# Start the Next.js application
CMD ["npm", "start"]
